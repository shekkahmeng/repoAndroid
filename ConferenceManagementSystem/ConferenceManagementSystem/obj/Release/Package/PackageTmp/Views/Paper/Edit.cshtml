@model ConferenceManagementSystem.Models.Paper

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/HomeLayout.cshtml";
}

<h2>Edit</h2>


@using (Html.BeginForm("Edit", "Paper", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Paper</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.PaperId)
        @Html.HiddenFor(model => model.UserId)
        @Html.HiddenFor(model => model.ConferenceId)

        <div class="form-group">
            @Html.LabelFor(model => model.Abstract, new { @class = "control-label col-md-2" })
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="file" name="Abstract" class="input-files" id="imgInp" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
